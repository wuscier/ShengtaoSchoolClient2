                    <Image Source="pack://application:,,,/St.DrawingBoard;component/Images/strokeEraser.png"  Width="28" Height="28" />
                </ToggleButton>

                <ToggleButton Style="{x:Null}"   ToolBar.OverflowMode="Never" x:Name="SelectionToggleButton" ToolTip="选择" Margin="5" IsChecked="{Binding IsSelectionChecked}">
                    <Image Source="pack://application:,,,/St.DrawingBoard;component/Images/selection.png" Width="28" Height="28"></Image>
                </ToggleButton>

                <Separator ToolBar.OverflowMode="Never" Style="{x:Null}"/>

                <ComboBox Style="{StaticResource DefaultComboBoxStyle}" ToolBar.OverflowMode="Never" x:Name="ThicknessComboBox" Margin="0,5,0,5" Width="54" SelectedIndex="{Binding InkThicknessIndex}" ToolTip="粗细" Padding="5,0">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="Black" Height="2" Width="20" Margin="5" />
                            <TextBlock Margin="8,0,0,0" ><Run Text="2" /></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="Black" Height="3" Width="20" Margin="5" />
                            <TextBlock Margin="8,0,0,0" ><Run Text="3" /></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="Black" Height="4" Width="20" Margin="5" />
                            <TextBlock Margin="8,0,0,0" ><Run Text="4" /></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="Black" Height="5" Width="20" Margin="5" />
                            <TextBlock Margin="8,0,0,0" ><Run Text="5" /></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="Black" Height="6" Width="20" Margin="5" />
                            <TextBlock Margin="8,0,0,0" ><Run Text="6" /></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                    <ComboBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Fill="Black" Height="7" Width="20" Margin="5" />
                            <TextBlock Margin="8,0,0,0" ><Run Text="7" /></TextBlock>
                        </StackPanel>
                    </ComboBoxItem>
                </ComboBox>
                <ComboBox Style="{StaticResource DefaultComboBoxStyle}"  x:Name="ColorComboBox" HorizontalAlignment="Center" Width="54"
        						ItemsSource="{Binding ColorPropertiesOdp}"
        					    SelectedItem="{Binding InkColor}" Margin="0,5,0,5" Height="24" ToolTip="颜色" VerticalAlignment="Top"
                                >
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ComboBoxItem}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="Color">
                            <StackPanel Orientation="Horizontal" Height="12" Margin="2">
                                <Border BorderThickness="1" CornerRadius="2"
        										BorderBrush="Black" Width="20" VerticalAlignment="Stretch"
        										Background="{Binding Converter={StaticResource ColorToBrushConverter}}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Separator ToolBar.OverflowMode="Never" Style="{x:Null}"/>

                <Button Style="{x:Null}" Margin="5" Command="{Binding ClearCommand}" ToolTip="清除">
                    <Image Source="pack://application:,,,/St.DrawingBoard;component/Images/new.png" Width="28" Height="28"></Image>
                </Button>

                <Button Style="{x:Null}"  Margin="5" Command="{Binding OpenCommand}" ToolTip="打开">
                    <Image Source="pack://application:,,,/St.DrawingBoard;component/Images/open.png" Width="28" Height="28"></Image>
                </Button>
                <Button Style="{x:Null}"  Margin="5" Command="{Binding SaveCommand}" ToolTip="保存">
                    <Image Source="pack://application:,,,/St.DrawingBoard;component/Images/save.png" Width="28" Height="28"></Image>
                </Button>

                <Separator ToolBar.OverflowMode="Never" Style="{x:Null}"/>
                <Button Style="{x:Null}"  Margin="5" Command="{Binding GotoSmallBoardCommand}" ToolTip="缩小画板">
                    <Image Source="pack://application:,,,/St.DrawingBoard;component/Images/gotosmall.png" Width="28" Height="28"></Image>
                </Button>


            </ToolBar>
        </ToolBarTray>
    </Grid>
</UserControl>
